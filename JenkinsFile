
pipeline {
    agent any
    stages {
	stage('Clone Repo') {
            steps {
                sh 'git fetch https://github.com/ALowtonQA/Spring_Boot_Project.git'
		sh 'cd Spring_Boot_Project && mvn clean package'
            }
        }
		post{

                always{
                        junit '**/target/report/TEST-*.xml'
                        }
                }

        stage('Run Tests') {
            steps {
                sh 'cd Spring_Boot_Project &'

            }
	}
        stage('Test Report') {
            steps {
                sh 'ls'
            }
        }
	stage('Build Jar') {
            steps {
                sh 'ls'
            }
        }
        stage('Deploy') {
            steps {
      		sh 'ls'
            }
        }
    }
}
