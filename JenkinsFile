
pipeline {
    agent any
    stages {
	stage('Clone Repo') {
            steps {
                sh 'git fetch https://github.com/ALowtonQA/Spring_Boot_Project.git'
		sh './mvnw clean compile'
            }
        }
        stage('Run Tests') {
            steps {
                sh './mvnw test'

            }
	    post{

		always{
			junit '**/target/report/TEST-*.xml'
			}
		}
        }
        stage('Test Report') {
            steps {
                sh 'ls'
            }
        }
	stage('Build Jar') {
            steps {
                sh 'ls'
            }
        }
        stage('Deploy') {
            steps {
      		sh 'ls'
            }
        }
    }
}
